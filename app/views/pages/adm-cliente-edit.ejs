    <div class="container body-content">
        <h2>Alterar dados do cliente</h2>
<form action="/adm/editar?id=<%=usuario.id_usuario %>" method="post">

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="nome" class = "control-label col-md-2">Nome</label>
            <div class="col-md-10">
                <input  class = "form-control"type="text" name="nome" id="nome" value="<%=usuario.nome_usuario %>">
            </div>
        </div>
        
        <div class="form-group">
            <label for="cep" class = "control-label col-md-2">CEP</label>
            <div class="col-md-10">
                <input  class = "form-control" type="text" name="cep" id="cep" value="<%=usuario.cep_usuario %>">            
            </div>
        </div>
        
        <div class="form-group" style="display:flex">
            <label for="" class = "control-label col-md-2">Imagem Perfil</label>
            <div class="col-md-5">
                <input  class = "form-control" type="file" name="ImagemPerfil" id="ImagemPerfil" >    
            </div>
            <img id="img-preview" 
            src="<%= usuario.img_perfil_pasta && usuario.img_perfil_pasta.trim() !== '' ? usuario.img_perfil_pasta : '../imagem/img_login.png' %>" 
            style="max-width:200px; max-height:200px;" />
        </div>
        
        <div class="form-group">
            <label for="nomeUsuario" class = "control-label col-md-2">Nome de Usu√°rio</label>
            <div class="col-md-10">
                <input  class = "form-control"type="text" name="nomeUsuario" id="nomeUsuario" value="<%=usuario.user_usuario %>">  
            </div>
        </div>
        
        <div class="form-group">
            <label for="email" class = "control-label col-md-2">E-mail</label>
            <div class="col-md-10">
                <input  class = "form-control"type="text" name="email" id="email" value="<%=usuario.email_usuario %>">  
            </div>
        </div>
        
        <div class="form-group">
            <label for="senha" class = "control-label col-md-2">Senha</label>
            <div class="col-md-10">
                <input  class = "form-control" type="password" name="senha" id="senha" value="<%=usuario.senha_usuario %>">  
             </div>
        </div>
        
        <div class="form-group">
            <label for="tipo" class = "control-label col-md-2">Tipo Usuario</label>
            <div class="col-md-10">
               <select name="tipo" id="tipo"  class = "form-control">
                    <option value="1" <%= usuario.tipo_usuario === 1 ? 'selected' : '' %> >Comum</option>
                    <option value="2" <%= usuario.tipo_usuario === 2 ? 'selected' : '' %> >Gerente</option>
               </select>
            </div>
        </div>
        
        <div class="form-group">
            <label for="status" class = "control-label col-md-2">Status</label>
            <div class="col-md-10">
                <select   class = "form-control" name="status" id="">
                    <option value="1" <%= usuario.status_usuario === 1 ? 'selected' : '' %> >Ativo</option>
                    <option value="0" <%= usuario.status_usuario === 0 ? 'selected' : '' %> >Inativo</option>
               </select>
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
    </form>
    
    <div>
        <a class="btn btn-primary btn-lg" href="/adm/adm-cliente" role="button">voltar</a>
    
    </div>
    
        <hr />

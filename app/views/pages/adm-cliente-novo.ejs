    <div class="container body-content">
        <h2>Novo cliente</h2>

<form action="/adm/adm-cliente-novo" method="post">

<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <label for="nome" class = "control-label col-md-2">Nome</label>
        <div class="col-md-10">
            <input class = "form-control" type="text" name="nome" id="nome" value="<%= campos.nome %>">
        </div>
    </div>
    
    <div class="form-group">
        <label for="cep" class = "control-label col-md-2">CEP</label>
        <div class="col-md-10">
            <input  class = "form-control" type="text" name="cep" id="cep" value="<%= campos.cep %>">            
        </div>
    </div>
    
    <div class="form-group" style="display:flex">
        <label for="" class = "control-label col-md-2">Imagem Perfil</label>
        <div class="col-md-5">
            <input  class = "form-control" type="file" name="ImagemPerfil" id="ImagemPerfil" value="<%= campos.ImagemPerfil %>">    
        </div>
        <img id="img-preview" src="../imagem/img_login.png" style="max-width:80px; max-height:80px;"/>
    </div>
    
    <div class="form-group">
        <label for="nomeUsuario" class = "control-label col-md-2">Nome de Usu√°rio</label>
        <div class="col-md-10">
            <input  class = "form-control"type="text" name="nomeUsuario" id="nomeUsuario"  value="<%= campos.nomeUsuario %>">  
        </div>
    </div>
    
    <div class="form-group">
        <label for="email" class = "control-label col-md-2">E-mail</label>
        <div class="col-md-10">
            <input  class = "form-control"type="text" name="email" id="email"  value="<%= campos.email %>">  
        </div>
    </div>
    
    <div class="form-group">
        <label for="senha" class = "control-label col-md-2">Senha</label>
        <div class="col-md-10">
            <input  class = "form-control" type="password" name="senha" id="senha" value="<%= campos.senha %>">  
         </div>
    </div>
    
    <div class="form-group">
        <label for="tipo" class = "control-label col-md-2">Tipo Usuario</label>
        <div class="col-md-10">
           <select name="tipo" id="tipo"  class = "form-control">
                <option value="1">Comum</option>
                <option value="2">Gerente</option>
           </select>
        </div>
    </div>
    
    <div class="form-group">
        <label for="status" class = "control-label col-md-2">Status</label>
        <div class="col-md-10">
            <select   class = "form-control" name="status" id="status">
                <option value="1">Ativo</option>
                <option value="0">Inativo</option>
           </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>
</div>
</form>

